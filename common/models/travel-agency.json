{
  "name": "travelAgency",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "ttl": 31536000000
  },
  "replaceOnPUT": false,
  "hidden": [
    "password",
    "verificationToken",
    "emailVerified",
    "realm"
  ],
  "scope": {
    "include": [{
        "relation": "country"
      },
      {
        "relation": "media"
      }
    ]
  },
  "properties": {
    "nameEn": {
      "type": "string",
      "required": true
    },
    "nameAr": {
      "type": "string",
      "required": true
    },
    "nameTr": {
      "type": "string",
      "required": false
    },
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active"
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "value": {
      "type": "number",
      "required": true,
      "default": "0"

    },
    "type": {
      "type": "string",
      "required": true,
      "default": "fixed"
    }

  },
  "validations": [],
  "relations": {
    "country": {
      "type": "belongsTo",
      "model": "country",
      "foreignKey": "ISOCode"
    },
    "media": {
      "type": "belongsTo",
      "model": "media",
      "foreignKey": "mediaId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "resetPassword"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "me"
    }
  ],
  "methods": {
    "resetPassword": {
      "accepts": [{
          "arg": "userId",
          "type": "string",
          "required": true,
          "description": ""
        },
        {
          "arg": "newPassword",
          "type": "string",
          "required": true,
          "description": ""
        }
      ],
      "returns": [{
        "arg": "code",
        "type": "number",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/resetPassword",
        "verb": "put"
      }]
    },
    "me": {
      "accepts": [{
        "arg": "context",
        "type": "object",
        "required": true,
        "description": "",
        "http": {
          "source": "context"
        }
      }],
      "returns": [{
        "arg": "result",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/me",
        "verb": "get"
      }]
    }

  }
}
