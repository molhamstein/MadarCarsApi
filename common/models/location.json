{
  "name": "location",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "scope": {
    "include": [{
        "relation": "media"
      },
      {
        "relation": "slideMedia"
      }
    ]
  },
  "properties": {
    "descriptionEn": {
      "type": "string",
      "required": true
    },
    "descriptionAr": {
      "type": "string",
      "required": true
    },
    "descriptionTr": {
      "type": "string",
      "required": false
    },
    "nameEn": {
      "type": "string",
      "required": true
    },
    "nameAr": {
      "type": "string",
      "required": true
    },
    "nameTr": {
      "type": "string",
      "required": false
    },
    "color1": {
      "type": "string",
      "required": true
    },
    "color2": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "default": "active"
    },
    "sublocationCount": {
      "type": "number",
      "default": 0
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "media": {
      "type": "belongsTo",
      "model": "media",
      "foreignKey": "mediaId"
    },
    "subLocations": {
      "type": "hasMany",
      "model": "subLocation",
      "foreignKey": "locationId"
    },
    "slideMedia": {
      "type": "hasMany",
      "model": "media",
      "foreignKey": "locationId",
      "options": {
        "nestRemoting": true
      },
      "through": "locationMedia"
    }
  },
  "acls": [{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "deactivate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "activate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "homeStatus"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "deactivate": {
      "accepts": [{
        "arg": "id",
        "type": "string",
        "required": true,
        "description": "",
        "http": {
          "source": "path"
        }
      }],
      "returns": [{
        "arg": "code",
        "type": "number",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/deactivate/:id",
        "verb": "delete"
      }]
    },
    "activate": {
      "accepts": [{
        "arg": "id",
        "type": "string",
        "required": true,
        "description": "",
        "http": {
          "source": "path"
        }
      }],
      "returns": [{
        "arg": "code",
        "type": "number",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/activate/:id",
        "verb": "put"
      }]
    },
    "homeStatus": {
      "accepts": [],
      "returns": [{
        "arg": "object",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/homeStatus",
        "verb": "get"
      }]
    }
  }
}
