{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "ttl": 31536000000
  },
  "replaceOnPUT": false,
  "hidden": [
    "password",
    "verificationToken",
    "emailVerified",
    "realm",
    "email"
  ],
  "scope": {
    "include": [
      {
        "relation": "country"
      }
    ]
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": false
    },
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active"
    },
    "registrationCompleted": {
      "type": "boolean",
      "default": true
    },
    "socialId": {
      "type": "string"
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "typeLogIn": {
      "type": "string",
      "default": "registration"
    }
  },
  "validations": [],
  "relations": {
    "country": {
      "type": "belongsTo",
      "model": "country",
      "foreignKey": "ISOCode"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "facebookLogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW",
      "property": "googleLogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "me"
    }
  ],
  "methods": {
    "deactivate": {
      "accepts": [
        {
          "arg": "id",
          "type": "string",
          "required": true,
          "description": "",
          "http": {
            "source": "path"
          }
        }
      ],
      "returns": [
        {
          "arg": "code",
          "type": "number",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/deactivate/:id",
          "verb": "delete"
        }
      ]
    },
    "activate": {
      "accepts": [
        {
          "arg": "id",
          "type": "string",
          "required": true,
          "description": "",
          "http": {
            "source": "path"
          }
        }
      ],
      "returns": [
        {
          "arg": "code",
          "type": "number",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/activate/:id",
          "verb": "put"
        }
      ]
    },
    "facebookLogin": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/facebookLogin",
          "verb": "post"
        }
      ]
    },
    "googleLogin": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/googleLogin",
          "verb": "post"
        }
      ]
    },
    "me": {
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "required": true,
          "description": "",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/me",
          "verb": "get"
        }
      ]
    }
  }
}
