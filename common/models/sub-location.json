{
  "name": "subLocation",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "scope": {
    "include": [
      {
        "relation": "media"
      },
      {
        "relation": "location"
      }
    ]
  },
  "properties": {
    "nameEn": {
      "type": "string",
      "required": true
    },
    "nameAr": {
      "type": "string",
      "required": true
    },
    "nameTr": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "string",
      "default": "active"
    },
    "color1": {
      "type": "string",
      "required": true
    },
    "color2": {
      "type": "string",
      "required": true
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "location": {
      "type": "belongsTo",
      "model": "location",
      "foreignKey": "locationId"
    },
    "media": {
      "type": "belongsTo",
      "model": "media",
      "foreignKey": "mediaId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "deactivate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "activate"
    }
  ],
  "methods": {}
}
