{
  "name": "predefinedTrips",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "scope": {
    "include": [{
        "relation": "media"
      },
      {
        "relation": "location"
      },
      {
        "relation": "predefinedTripsMedia"
      },
      {
        "relation": "predefinedTripsSublocations"
      }
    ]
  },
  "properties": {
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "duration": {
      "type": "number",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "active"
    },
    "titleEn": {
      "type": "string",
      "required": true
    },
    "titleAr": {
      "type": "string",
      "required": true
    },
    "titleTr": {
      "type": "string",
      "required": false
    },
    "descriptionEn": {
      "type": "string",
      "required": true
    },
    "descriptionAr": {
      "type": "string",
      "required": true
    },
    "descriptionTr": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "predefinedTripsMedia": {
      "type": "hasMany",
      "model": "media",
      "foreignKey": "predefinedTripId",
      "options": {
        "nestRemoting": true
      },
      "through": "predefinedTripsMedia"
    },
    "location": {
      "type": "belongsTo",
      "model": "location",
      "foreignKey": "locationId",
      "options": {
        "nestRemoting": true
      }
    },
    "media": {
      "type": "belongsTo",
      "model": "media",
      "foreignKey": "mediaId",
      "options": {
        "nestRemoting": true
      }
    },
    "predefinedTripsSublocations": {
      "type": "hasMany",
      "model": "predefinedTripsSublocation",
      "foreignKey": "predefinedTripId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "deactivate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "activate"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "ALLOW"
    }

  ],
  "methods": {
    "deactivate": {
      "accepts": [{
        "arg": "id",
        "type": "string",
        "required": true,
        "description": "",
        "http": {
          "source": "path"
        }
      }],
      "returns": [{
        "arg": "code",
        "type": "number",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/deactivate/:id",
        "verb": "delete"
      }]
    },
    "activate": {
      "accepts": [{
        "arg": "id",
        "type": "string",
        "required": true,
        "description": "",
        "http": {
          "source": "path"
        }
      }],
      "returns": [{
        "arg": "code",
        "type": "number",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/activate/:id",
        "verb": "put"
      }]
    }

  }
}
